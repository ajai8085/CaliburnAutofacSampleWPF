<Window x:Class="DemoApp.ShellView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ShellView" Height="300" Width="300">
    <Window.Resources>
        <DataTemplate x:Key="CustomerTemplate">
            <StackPanel>
                <TextBox Text="{Binding FirstName}"></TextBox>
            </StackPanel>
        </DataTemplate>
    </Window.Resources>
    
        <StackPanel Margin="10">
            <TextBlock>First Name</TextBlock>
            <TextBox Name="FirstName"></TextBox>
            <TextBlock>Last Name</TextBlock>
            <TextBox Name="LastName"></TextBox>
            <TextBlock>Age</TextBlock>
            <TextBox Name="Age"></TextBox>
        <StackPanel HorizontalAlignment="Right" Orientation="Horizontal" Margin="0,10,0,0" >
            <Button Name="Cancel" Width="50" Margin="10"> Cancel </Button>
            <Button Name="Save" Width="50" Margin="10">Save</Button>
        </StackPanel>
        </StackPanel>


       
       
</Window>
